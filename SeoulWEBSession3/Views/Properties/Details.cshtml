@model SeoulWEBSession3.Models.PropertyViewModel.PropertyDetailsViewModel
@* @model SeoulWEBSession3.Models.PropertyViewModel.PropertyViewModel *@
<div class="container">
    <h2>Details of @Model.Title</h2>

    <div class="row">
        @foreach(var image in Model.Images)
        {
            <div class="col-md-4">
              <img src="/images/@image" alt="Property Image" class="img-fluid" />  
            </div>
        }
    </div>

    <div class="mt-4">
        <p>Capacity: @Model.Capacity Bedroom: @Model.NumberOfBedrooms
         Beds: @Model.NumberOfBeds  Bathroom: @Model.NumberOfBathrooms </p>
        <h5>Description</h5>
        <p>@Model.Description</p>

        <h5>Host Rules</h5>
        <p>@Model.HostRules</p>

        <h5>Available Amenities:</h5>
        <ul>
            @foreach (var amenity in Model.Amenities)
            {
                <li>@amenity</li>
            }
        </ul>

        <div class="reservation-form mt-4">
            <form>
                <label for="checkin">Check-in:</label>
                <input type="date" id="checkin" />

                <label for="checkout">Check-out:</label>
                <input type="date" id="checkout" name="checkout" />

                <label for="guests">Reserve for:</label>
                <input type="number" id="guests" name="guests" min="1" value="1"/>

                <p>Price per night: $@Model.Price USD</p>
                <p>Total Payable Amount: <span id="totalAmount">$0 USD</span></p>

                <button type="button" class="btn btn-primary">Reserve Now</button>
            </form>
        </div>

    </div>
</div>